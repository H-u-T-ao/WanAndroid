<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_color"
        app:tabIndicatorColor="@color/app_white"
        app:tabSelectedTextColor="@color/app_white"
        app:tabTextColor="#60FFFFFF" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_project_dock"
        android:layout_below="@id/tab_project" />

    <TextView
        android:id="@+id/tv_project_dock"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>