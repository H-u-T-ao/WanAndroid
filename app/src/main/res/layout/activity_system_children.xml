<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_system_children_task_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_color" />

    <RelativeLayout
        android:id="@+id/rl_system_children_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_color"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_system_children_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/app_white"
            android:textSize="20sp" />

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_system_children"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_color"
        app:tabIndicatorColor="@color/app_white"
        app:tabSelectedTextColor="@color/app_white"
        app:tabTextColor="#60FFFFFF" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_system_children"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>